{
  "ts-node": {
    "compilerOptions": {
      "module": "commonJS"
    }
  },
  "scripts": {
    "build": "npm run build:sef:assertion-grouping && npm run build:assertion-views && npm run build:snowpack",
    "build:assertion-views": "ts-node -r tsconfig-paths/register src/cli/index.ts create-assertion-view",
    "build:schematron": "npm run build:schematron-java && npm run build:sef && npm run build:ssp-json",
    "build:schematron-ideal": "npm run build:sch-stage-1 && npm run build:sch-stage-2 && npm run build:sch-stage-3 && npm run build:sef",
    "build:schematron-java": "cd ../validations && ./bin/validate_with_schematron.sh && cp target/ssp.xsl ../web/public",
    "build:sch-stage-1": "xslt3 -s:../validations/rules/ssp.sch -xsl:../../vendor/schematron/trunk/schematron/code/iso_dsdl_include.xsl -o:../validations/target/ssp-stage1.sch",
    "build:sch-stage-2": "xslt3 -s:../validations/target/ssp-stage1.sch -xsl:../../vendor/schematron/trunk/schematron/code/iso_abstract_expand.xsl -o:../validations/target/ssp-stage2.sch",
    "build:sch-stage-3": "xslt3 -s:../validations/target/ssp-stage2.sch -xsl:../../vendor/schematron/trunk/schematron/code/iso_svrl_for_xslt2.xsl -o:../validations/target/ssp.xsl",
    "build:sef": "npm run build:sef:ssp.sch && npm run build:sef:assertion-grouping",
    "build:sef:ssp.sch": "xslt3 -xsl:public/ssp.xsl -export:public/ssp.sef.json -nogo",
    "build:sef:assertion-grouping": "xslt3 -xsl:../validations/rules/assertion-grouping.xsl -export:public/assertion-grouping.sef.json -nogo",
    "build:snowpack": "snowpack build",
    "build:ssp-json": "ts-node -r tsconfig-paths/register src/cli/index.ts parse-schematron ../validations/rules/ssp.sch ./public/ssp.json",
    "cli": "ts-node -r tsconfig-paths/register src/cli/index.ts",
    "clean": "rm -rf build coverage",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "prettier --check \"src/**/*.{js,jsx,ts,tsx}\"",
    "postinstall": "patch-package",
    "start": "concurrently \"overmind-devtools\" \"snowpack dev\"",
    "test": "jest",
    "test:coverage": "jest --coverage && open ./coverage/lcov-report/index.html"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "commander": "^2.20.3",
    "fp-ts": "^2.11.1",
    "highlight.js": "^11.0.1",
    "io-ts": "^2.2.16",
    "overmind": "^28.0.1",
    "overmind-react": "^29.0.1",
    "patch-package": "^6.4.7",
    "path-to-regexp": "^6.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "saxon-js": "^2.2.0",
    "uswds": "^2.11.2"
  },
  "devDependencies": {
    "@snowpack/app-scripts-react": "^2.0.1",
    "@snowpack/plugin-dotenv": "^2.1.0",
    "@snowpack/plugin-postcss": "^1.4.3",
    "@snowpack/plugin-react-refresh": "^2.5.0",
    "@snowpack/plugin-sass": "^1.4.0",
    "@snowpack/plugin-typescript": "^1.2.1",
    "@snowpack/plugin-webpack": "^2.3.1",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.2",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.3",
    "@types/snowpack-env": "^2.3.3",
    "autoprefixer": "^10.2.5",
    "concurrently": "^6.2.0",
    "jest": "^27.0.1",
    "jest-html-reporter": "^3.4.1",
    "overmind-devtools": "^29.0.0",
    "prettier": "^2.2.1",
    "snowpack": "^3.6.2",
    "snowpack-plugin-raw-file-loader": "^1.0.9",
    "ts-jest": "^27.0.1",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.2.4",
    "xslt3": "^2.2.0"
  }
}
