{
  "ts-node": {
    "compilerOptions": {
      "module": "commonJS"
    }
  },
  "scripts": {
    "build": "mkdirp build && run-s build:schematron build:json build:snowpack",
    "build:json": "run-p build:json:sef:* && run-p build:json:cli:*",
    "build:json:cli:assertion-views": "ts-node -r tsconfig-paths/register src/cli/index.ts create-assertion-view",
    "build:json:cli:schematron": "ts-node -r tsconfig-paths/register src/cli/index.ts parse-schematron ../validations/rules/ssp.sch ./public/ssp.json",
    "build:json:sef:assertion-grouping": "xslt3 -xsl:../validations/rules/assertion-grouping.xsl -export:public/assertion-grouping.sef.json -nogo",
    "build:json:sef:ssp-json-to-xml": "xslt3 -xsl:../../vendor/oscal/xml/convert/oscal_ssp_json-to-xml-converter.xsl -export:public/oscal_ssp_json-to-xml-converter.sef.json -nogo",
    "build:json:sef:ssp.sch": "xslt3 -xsl:build/ssp.xsl -export:public/ssp.sef.json -nogo",
    "build:schematron": "run-s build:schematron:*",
    "build:schematron-java-unused": "cd ../validations && ./bin/validate_with_schematron.sh && cp target/ssp.xsl ../web/public",
    "build:schematron:stage-1": "xslt3 -s:../validations/rules/ssp.sch -xsl:../../vendor/schematron/trunk/schematron/code/iso_dsdl_include.xsl -o:build/ssp-stage1.sch allow-foreign=true diagnose=true",
    "build:schematron:stage-2": "xslt3 -s:build/ssp-stage1.sch -xsl:../../vendor/schematron/trunk/schematron/code/iso_abstract_expand.xsl -o:build/ssp-stage2.sch allow-foreign=true diagnose=true",
    "build:schematron:stage-3": "xslt3 -s:build/ssp-stage2.sch -xsl:../../vendor/schematron/trunk/schematron/code/iso_svrl_for_xslt2.xsl -o:build/ssp.xsl allow-foreign=true diagnose=true",
    "build:schematron:summary": "xslt3 -s:../validations/rules/rules.xsl -xsl:../validations/rules/rules.xsl -o:public/rules.html",
    "build:snowpack": "snowpack build",
    "cli": "ts-node -r tsconfig-paths/register src/cli/index.ts",
    "clean": "rm -rf build coverage",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "prettier --check \"src/**/*.{js,jsx,ts,tsx}\"",
    "postinstall": "patch-package",
    "start": "snowpack dev",
    "test": "jest",
    "test:coverage": "jest --coverage && open ./coverage/lcov-report/index.html"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "commander": "^2.20.3",
    "fp-ts": "^2.11.1",
    "highlight.js": "^11.0.1",
    "io-ts": "^2.2.16",
    "overmind": "^28.0.1",
    "overmind-react": "^29.0.1",
    "patch-package": "^6.4.7",
    "path-to-regexp": "^6.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "saxon-js": "^2.3.0",
    "uswds": "^2.12.0"
  },
  "devDependencies": {
    "@snowpack/plugin-dotenv": "^2.1.0",
    "@snowpack/plugin-postcss": "^1.4.3",
    "@snowpack/plugin-react-refresh": "^2.5.0",
    "@snowpack/plugin-sass": "^1.4.0",
    "@snowpack/plugin-typescript": "^1.2.1",
    "@snowpack/plugin-webpack": "^3.0.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.6.1",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.3",
    "@types/snowpack-env": "^2.3.3",
    "autoprefixer": "^10.2.5",
    "concurrently": "^6.2.0",
    "jest": "^27.0.6",
    "jest-html-reporter": "^3.4.1",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "sass": "1.32.13",
    "snowpack": "^3.8.6",
    "snowpack-plugin-raw-file-loader": "^1.0.9",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5",
    "xslt3": "^2.3.0"
  }
}
